% Define the center of mass symbol
\newcommand{\centerofmass}{
    \tikz[radius=0.4em]{
        \fill[] (0,0) -- ++(0.4em,0) arc[start angle=0,end angle=90] --
            ++(0,-0.8em) arc[start angle=270,end angle=180];
        \draw[thick] (0,0) circle;
    }
}
